generator client {
  provider = "prisma-client-js"  
  output   = "../src/generated/prisma" 
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 1. SEUS MODELOS 

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  number    String
  message   String   @db.Text
  createdAt DateTime @default(now())
}

model User {
  id       Int           @id @default(autoincrement())
  username String        @unique
  password String
  email    String        @unique
  number   String?
  links    GrafanaLink[]
}

model GrafanaLink {
  id          Int    @id @default(autoincrement())
  name        String
  url         String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}

